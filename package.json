{
  "name": "ltsv",
  "description": "LTSV parser, formatter, validator and TransformStream",
  "version": "3.0.0",
  "author": "sasa+1 <sasaplus1@gmail.com>",
  "browser": "./dist/ltsv.module.js",
  "bugs": {
    "url": "https://github.com/sasaplus1/ltsv.js/issues"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tsconfig/strictest": "2.0.8",
    "@types/node": "22.19.7",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "microbundle": "0.15.1",
    "npm-run-all2": "5.0.0",
    "typedoc": "0.28.16",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=20"
  },
  "exports": {
    ".": {
      "types": "./dist/src/ltsv.d.ts",
      "import": "./dist/ltsv.modern.mjs",
      "require": "./dist/ltsv.cjs"
    },
    "./nodejs_stream": {
      "types": "./dist/src/nodejs_stream.d.ts",
      "import": "./dist/nodejs_stream/ltsv.modern.mjs",
      "require": "./dist/nodejs_stream/ltsv.cjs"
    },
    "./whatwg_stream": {
      "types": "./dist/src/whatwg_stream.d.ts",
      "import": "./dist/whatwg_stream/ltsv.modern.mjs",
      "require": "./dist/whatwg_stream/ltsv.cjs"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "homepage": "https://github.com/sasaplus1/ltsv.js#readme",
  "keywords": [
    "formatter",
    "ltsv",
    "parser",
    "stream",
    "validator"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts,json}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "package.json": [
      "npx fixpack --dryRun"
    ]
  },
  "main": "./dist/ltsv.cjs",
  "module": "./dist/ltsv.module.mjs",
  "readmeFilename": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/sasaplus1/ltsv.js.git"
  },
  "scripts": {
    "build": "run-p -l build:*",
    "build-documents": "typedoc",
    "build:main": "microbundle",
    "build:nodejs_stream": "microbundle -i ./src/nodejs_stream.ts -o ./dist/nodejs_stream -f modern,esm,cjs --target node",
    "build:whatwg_stream": "microbundle -i ./src/whatwg_stream.ts -o ./dist/whatwg_stream -f modern,esm,cjs,umd --target web",
    "fix": "run-s fix:*",
    "fix:biome": "biome check --write .",
    "fix:fixpack": "npx fixpack",
    "lint": "run-s lint:*",
    "lint:biome": "biome check .",
    "lint:fixpack": "npx fixpack --dryRun",
    "lint:tsc": "tsc --noEmit",
    "prepare": "husky",
    "test": "vitest run"
  },
  "sideEffects": false,
  "source": "./src/index.ts",
  "type": "module",
  "types": "./dist/src/ltsv.d.ts",
  "unpkg": "./dist/ltsv.umd.js"
}
