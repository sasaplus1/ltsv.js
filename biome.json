{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on"
        }
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noControlCharactersInRegex": "off",
        "noExplicitAny": "off"
      },
      "style": {
        "useNodejsImportProtocol": "off",
        "useTemplate": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "none"
    }
  },
  "files": {
    "includes": ["**", "!dist", "!node_modules", "!docs"]
  },
  "overrides": [
    {
      "includes": ["package.json"],
      "formatter": {
        "enabled": false
      }
    }
  ]
}
